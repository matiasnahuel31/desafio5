html 
    head
        title='Products List'
    body
        include ../partials/header.pug
        if productos.length>0
            table 
                tr 
                    th='#ID'
                    th='Nombre'
                    th='Precio'
                    th='Imagen'
                for p in productos
                    tr
                        td=p .id
                        td=p.nombre
                        td=p.price
                        td 
                            img(src=p.thumbnail width="50px" height="50px")
        else 
            h2='No hay productos en la lista'
        include ../partials/footer.pug

